{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "declaration": true,
    "isolatedModules": false,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "types": ["webpack-env"],
    "paths": {
      "@/*": ["src/*"],
      "*": ["src/types/*"]
    },
    "lib": ["esnext", "dom", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "src/types/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
